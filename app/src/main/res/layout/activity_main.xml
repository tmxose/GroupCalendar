<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Calendar App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <!-- Default Calendar Button -->
    <Button
        android:id="@+id/defaultCalendarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Default Calendar"
        android:layout_marginBottom="16dp"/>

    <!-- Group/Personal Calendar Button -->
    <Button
        android:id="@+id/groupCalendarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group/Personal Calendar"
        android:layout_marginBottom="16dp"/>

    <!-- Settings Button -->
    <Button
        android:id="@+id/settingsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"/>

</LinearLayout>
