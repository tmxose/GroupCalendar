<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_config"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GroupCalendar">

        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:label="Main Activity"> <!-- Launcher 액티비티로 설정 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.CalendarViewActivity"
            android:label="그룹/개인 캘린더 선택 페이지"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.groupcalendar.ACTION_CALENDAR_VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.DefaultCalendarActivity"
            android:label="기본 캘린더 선택 페이지"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.groupcalendar.ACTION_DEFAULT_CALENDAR" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.SettingsActivity"
            android:label="설정 페이지"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.groupcalendar.ACTION_SETTINGS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


    </application>

</manifest>
